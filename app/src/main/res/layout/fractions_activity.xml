<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activities.PrimesActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.PrimesActivity">

        <LinearLayout android:id="@+id/linerlayOut" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/activity_horizontal_margin"
                      android:layout_marginRight="@dimen/activity_horizontal_margin"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fractions ANd Complex Numbers"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_title"/>

            <TextView android:id="@+id/para1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>

            <View style="@style/Divider"/>

            <TextView android:id="@+id/code1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>

            <TextView android:id="@+id/optOneLabel"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions1"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>


            <TextView android:id="@+id/label1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="4/9 + 1/6 = (4*2)/(9 * 2) + (1 * 3)/(6 * 3) =  8/18 +  3/18"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>

            <TextView android:id="@+id/stepLabel"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions2"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/step2Label"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="4/9 - 1/6 =  8/18 -  3/18 =  5/18"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/step2code"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Here is the code to add two fractions:"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>

            <View style="@style/Divider"/>
            <TextView android:id="@+id/code2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>

            <TextView android:id="@+id/step4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions3"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>

            <View style="@style/Divider"/>
            <TextView android:id="@+id/code3"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/label4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions4"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/code4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="ax + by = c"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/label5"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions5"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/code5"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/label6"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/fractions6"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
            <View style="@style/Divider"/>
            <TextView android:id="@+id/code6"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/font_normal"/>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>
</ScrollView>